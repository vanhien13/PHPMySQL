	 function evennumbercheck($number){
        if ((is_numeric($number)) && ((round($number)) % 2)){
            echo"$number is odd";
		 }
		 elseif((is_numeric($number)) && ((round($number)) % 2==0)){
            echo "$number is even";
           }
         else {
              echo "$number is not a number";
           }
        
		}	
